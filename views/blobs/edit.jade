extends ../layout

block content
    h1.
        Blob ID #{blob._id}
    form(action='/api/v1/blobs/#{blob._id}/edit',method='post',name='updateblob',enctype='application/x-www-form-urlencoded')
        p Number: 
            input#inputName(type='phoneNumber', value='#{blob.phoneNumber}', name='number')
        p Description: 
            input#inputName(type='string', value='#{blob.description}', name='description')
        p Date: 
            input#inputDob(type='date', value='#{blobdob}', name='date')
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update